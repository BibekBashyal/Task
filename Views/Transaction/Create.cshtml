@model Task_Inficare.ViewModels.TransactionViewModel

<h1>Send Money</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Sender Information -->
    <h3>Sender Information</h3>
    <div class="form-group">
        <label asp-for="SenderFirstName"></label>
        <input asp-for="SenderFirstName" class="form-control" />
        <span asp-validation-for="SenderFirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SenderMiddleName"></label>
        <input asp-for="SenderMiddleName" class="form-control" />
        <span asp-validation-for="SenderMiddleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SenderLastName"></label>
        <input asp-for="SenderLastName" class="form-control" />
        <span asp-validation-for="SenderLastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SenderAddress"></label>
        <input asp-for="SenderAddress" class="form-control" />
        <span asp-validation-for="SenderAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SenderCountry"></label>
        <input asp-for="SenderCountry" class="form-control" value="Malaysia" readonly />
        <span asp-validation-for="SenderCountry" class="text-danger"></span>
    </div>

    <!-- Receiver Information -->
    <h3>Receiver Information</h3>
    <div class="form-group">
        <label asp-for="ReceiverFirstName"></label>
        <input asp-for="ReceiverFirstName" class="form-control" />
        <span asp-validation-for="ReceiverFirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverMiddleName"></label>
        <input asp-for="ReceiverMiddleName" class="form-control" />
        <span asp-validation-for="ReceiverMiddleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverLastName"></label>
        <input asp-for="ReceiverLastName" class="form-control" />
        <span asp-validation-for="ReceiverLastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverAddress"></label>
        <input asp-for="ReceiverAddress" class="form-control" />
        <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverCountry"></label>
        <input asp-for="ReceiverCountry" class="form-control" value="Nepal" readonly />
        <span asp-validation-for="ReceiverCountry" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverBankName"></label>
        <input asp-for="ReceiverBankName" class="form-control" />
        <span asp-validation-for="ReceiverBankName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiverAccountNumber"></label>
        <input asp-for="ReceiverAccountNumber" class="form-control" />
        <span asp-validation-for="ReceiverAccountNumber" class="text-danger"></span>
    </div>

    <!-- Transaction Details -->
    <h3>Transaction Details</h3>
    <div class="form-group">
        <label asp-for="TransferAmountMYR"></label>
        <input asp-for="TransferAmountMYR" class="form-control" id="transferAmountMYR" oninput="updatePayoutAmount()" />
        <span asp-validation-for="TransferAmountMYR" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExchangeRate"></label>
        <input asp-for="ExchangeRate" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="PayoutAmountNPR" class="form-check-label"></label>
        <input asp-for="PayoutAmountNPR" class="form-control" readonly id="payoutAmountNPR" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script>
    function updatePayoutAmount() {
        var transferAmountMYR = parseFloat(document.getElementById('transferAmountMYR').value) || 0;
        var exchangeRate = parseFloat(document.querySelector('input[name="ExchangeRate"]').value) || 0;
        var payoutAmountNPR = transferAmountMYR * exchangeRate;
        document.getElementById('payoutAmountNPR').value = payoutAmountNPR.toFixed(2);
    }
</script>
